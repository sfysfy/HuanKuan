<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.repayment.money.ui.activity.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:text="每期还款 (元)"
            android:textColor="#666"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_money_activity_detail"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:text="2000"
                android:textColor="#f66"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="."
                android:textColor="#f66"
                android:textSize="33dp"/>
            <TextView
                android:id="@+id/tv_money2_activity_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="00"
                android:textColor="#f66"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="还款日: 每月"
                android:textColor="#666"
                android:textSize="15dp"/>
               <TextView android:id="@+id/tv_repay_date_activity_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="15"
                android:textColor="#666"
                android:textSize="15dp"/>
               <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="日"
                android:textColor="#666"
                android:textSize="15dp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/tv_zhandan"
            android:background="#dbdbdb"
        />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_icon_activity_detail"
                android:layout_width="29dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:src="@drawable/jianhang"/>

            <TextView
                android:id="@+id/tv_bank_name_bank_activity_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="中国建设银行  (6060)"
                android:textColor="#2f2b08" android:textSize="15dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrowright999"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
           >
            <ImageView
                android:id="@+id/img_detail_activity"
                android:layout_marginLeft="22dp"
                android:src="@drawable/confirmt"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_marginRight="3dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_money_detail_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000.00"
                android:textColor="#2f2b08"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_detail_activity"
                android:layout_toEndOf="@+id/img_detail_activity"/>

            <TextView
                android:layout_marginBottom="3dp"
                android:id="@+id/tv_state_detail_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_arraw_right_detail_activity"
                android:text="还款成功"
                android:textColor="#88e3f1"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_time_activity_detail"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/tv_state_detail_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_arraw_right_detail_activity"
                android:text="2017-02-17 10:30"
                android:textColor="#2f2b08"
                android:textSize="13dp"/>

            <ImageView
                android:id="@+id/img_arraw_right_detail_activity"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/arrowright999"/>
        </RelativeLayout>

        <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>


</LinearLayout>
