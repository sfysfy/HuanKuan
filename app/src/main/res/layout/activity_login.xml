<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.repayment.money.ui.activity.LogincAtivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="#fff">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:src="@drawable/icon_hkw"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingTop="15dp"
    >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:src="@drawable/phone_num"
        />

        <View
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:background="#fff">

        </View>

        <EditText
            android:text="15731660437"
            android:id="@+id/edt_user_login_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="14sp"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#666"
        android:layout_gravity="center_vertical"
        >
        </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingTop="15dp"
    >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:src="@drawable/phone_num"
        />

        <View
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:background="#fff">

        </View>

        <EditText
            android:text="123456"
            android:id="@+id/edt_pwd_login_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入6-16位密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textSize="14sp"/>
    </LinearLayout>


    <View
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#666"
        android:layout_gravity="center_vertical"
        >
    </View>

    <Button
        android:id="@+id/bt_login_login_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edt_code_login_activity"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:text="登      录"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reg_activity_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_weight="1"
            android:background="#fff"
            android:clickable="true"
            android:text="注册"
            android:textColor="#fead00"/>

        <TextView
            android:id="@+id/tv_wj_activity_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-50dp"
            android:layout_weight="1"
            android:background="#fff"
            android:clickable="true"
            android:text="忘记密码?"
            android:textColor="#fead00"/>

    </LinearLayout>
</LinearLayout>

