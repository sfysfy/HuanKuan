<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    tools:context="com.repayment.money.ui.activity.RegActivity">

    <ImageView

        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="47dp"
        android:layout_marginTop="70dp"
        android:padding="5dp" android:src="@drawable/icon"/>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:padding="5dp" android:src="@drawable/phone_num"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edt_regname_reg"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:hint="请输入用户名"
            android:textColor="#2f2b08"
            android:textColorHint="#666"/>
    </LinearLayout>
    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/validate"/>
        <EditText
            android:id="@+id/edt_validate_reg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="#2f2b08"
            android:textColorHint="#666"/>
        <Button
            android:id="@+id/bt_validate_reg"
            android:layout_width="75dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bt_code"
            android:text="获取验证码"
            android:textColor="#fead00"
            android:textSize="13sp"/>
    </LinearLayout>
    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/pwd"/>
        <EditText
            android:id="@+id/edt_regpwd_reg"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:hint="请输入6-16位密码"
            android:textColor="#2f2b08"
            android:textColorHint="#666"/>
    </LinearLayout>
    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <Button
        android:id="@+id/bt_reg_reg"
        android:layout_width="255dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:background="@drawable/bt_reg"
        android:text="注册"/>
    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">

        </View>
        <TextView
            android:id="@+id/tv_login_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="已有账号,点击登录"
            android:textColor="#fead00"/>
    </LinearLayout>

</LinearLayout>
