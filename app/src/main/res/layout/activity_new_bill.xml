<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.repayment.money.ui.activity.NewBillActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:text="账单信息"
            android:textColor="#2f2b08"
            android:textSize="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/tv_zhandan"
            android:background="#dbdbdb"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:columnCount="2"
            android:rowCount="7">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="14dp"
                android:text="贷款类型:"
                android:textColor="#2f2b08"/>

            <Spinner
                android:id="@+id/sp_type_newbill"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
            >
            </Spinner>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="12dp"
                android:text="每期还款日:"
                android:textColor="#2f2b08"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            >
                <Spinner
                    android:id="@+id/sp_date_newbill"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content">
                </Spinner>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="14dp"
                android:text="还款周期:"
                android:textColor="#2f2b08"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textColor="#2f2b08"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="14dp"
                android:text="还款期数:"
                android:textColor="#2f2b08"/>
            <EditText
                android:id="@+id/edt_repay_number"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="@drawable/biankuang"
                android:inputType="number"
                android:maxLength="19"
                android:singleLine="true"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="14dp"
                android:text="每期还款:"
                android:textColor="#2f2b08"/>
            <EditText
                android:id="@+id/edt_repay_newbill"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="@drawable/biankuang"
                android:inputType="number|numberDecimal"
                android:maxLength="19"
                android:singleLine="true"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="14dp"
                android:text="银行卡号:"
                android:textColor="#2f2b08"/>
            <EditText
                android:id="@+id/edt_card_newbill"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="@drawable/biankuang"
                android:maxLength="19"
                android:singleLine="true"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="14dp"
                android:text="收款银行:"
                android:textColor="#2f2b08"/>
            <EditText
                android:id="@+id/edt_bank_newbill"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="@drawable/biankuang"
                android:focusable="false"
                android:maxLength="19"
                android:singleLine="true"
                android:textSize="16sp"/>


        </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/tv_zhandan"
            android:background="#dbdbdb"
        />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:text="还款信息"
            android:textColor="#2f2b08"
            android:textSize="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/tv_zhandan"
            android:background="#dbdbdb"/>

        <LinearLayout
            android:id="@+id/xz_newbank_bill"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_add_newbill"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:src="@drawable/bankcard"/>

            <TextView
                android:id="@+id/tv_bankinfo_newbill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="新增银行卡"
                android:textColor="#2f2b08"
                android:textSize="15dp"/>
            <ImageView
                android:id="@+id/img_more_newbill"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrowright999"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_add_newbill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bt_reg"
        android:text="确认添加"/>
</LinearLayout>
